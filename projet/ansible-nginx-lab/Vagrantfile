Vagrant.configure("2") do |config|
  # Utiliser la box Ubuntu Server officielle, version 20.04 LTS (nommée ubuntu/focal64)
  config.vm.box = "ubuntu/focal64"

  # Configuration de la VM
  config.vm.provider "virtualbox" do |vb|
    vb.memory = "2048"  # 2048 Mo (2 Go) de RAM
    vb.cpus = 2         # 2 processeurs
  end

  # Réseau privé pour accéder à la VM sur une IP locale
  config.vm.network "private_network", ip: "192.168.56.10"
  
  # Optionnel : désactiver les dossiers synchronisés par défaut si vous n'en avez pas besoin
  # config.vm.synced_folder ".", "/vagrant", disabled: true
end
